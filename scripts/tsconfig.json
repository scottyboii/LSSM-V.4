{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "importHelpers": true,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost",
            "es5"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "paths": {
            "typings/*": [
                "../typings/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2017",
        "types": [
            "node",
            "vue"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts"
    ]
}